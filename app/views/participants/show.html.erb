<% content_for :title, "#{@participant.name} - News Jace Pro" %>

<div class="mt-4">
  <%# Admin panel for linking company %>
  <% if current_user&.admin? %>
    <div class="mb-6 p-4 rounded-lg border <%= @participant.company_id.nil? && @participant.company_name.present? ? 'border-yellow-300 bg-yellow-50' : 'border-gray-200 bg-gray-50' %>">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-medium text-gray-700">Admin</span>
        <%= link_to "Edit", edit_admin_participant_path(@participant), class: "text-xs text-blue-600 hover:underline" %>
      </div>
      
      <% if @participant.company_id.present? %>
        <p class="text-sm text-green-600">
          ✓ Linked to <%= link_to @participant.company.name, admin_company_path(@participant.company), class: "underline" %>
        </p>
      <% elsif @participant.company_name.present? %>
        <p class="text-sm text-yellow-700 mb-2">⚠ Company "<%= @participant.company_name %>" not linked</p>
        <%= form_with url: participant_link_company_path(@participant), method: :post, class: "flex flex-wrap items-center gap-2", local: true, id: "link-company-form" do %>
          <div class="relative">
            <input type="text" 
                   id="company-search" 
                   placeholder="Search companies..." 
                   value="<%= @participant.company_name %>"
                   autocomplete="off"
                   class="text-sm border-gray-300 rounded py-1.5 px-3 w-64">
            <input type="hidden" name="company_id" id="company-id-input">
            <div id="company-results" class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-md shadow-lg max-h-60 overflow-auto"></div>
          </div>
          <button type="submit" class="text-sm bg-blue-600 text-white px-3 py-1.5 rounded hover:bg-blue-700">Link</button>
          <span class="text-xs text-gray-500">or</span>
          <button type="submit" name="company_id" value="new" class="text-sm text-green-600 hover:text-green-800">+ Create new</button>
          <input type="hidden" name="new_company_name" id="new-company-name" value="<%= @participant.company_name %>">
        <% end %>
        
        <script>
        (function() {
          const searchInput = document.getElementById('company-search');
          const resultsDiv = document.getElementById('company-results');
          const companyIdInput = document.getElementById('company-id-input');
          const newCompanyName = document.getElementById('new-company-name');
          let debounceTimer;
          
          searchInput.addEventListener('input', function() {
            const query = this.value.trim();
            newCompanyName.value = query;
            
            clearTimeout(debounceTimer);
            if (query.length < 2) {
              resultsDiv.classList.add('hidden');
              return;
            }
            
            debounceTimer = setTimeout(() => {
              fetch(`/api/companies/search?q=${encodeURIComponent(query)}`)
                .then(r => r.json())
                .then(companies => {
                  if (companies.length === 0) {
                    resultsDiv.innerHTML = '<div class="px-3 py-2 text-sm text-gray-500">No matches found</div>';
                  } else {
                    resultsDiv.innerHTML = companies.map(c => 
                      `<div class="px-3 py-2 text-sm hover:bg-blue-50 cursor-pointer" data-id="${c.id}" data-name="${c.name}">${c.name}</div>`
                    ).join('');
                  }
                  resultsDiv.classList.remove('hidden');
                });
            }, 200);
          });
          
          resultsDiv.addEventListener('click', function(e) {
            const item = e.target.closest('[data-id]');
            if (item) {
              searchInput.value = item.dataset.name;
              companyIdInput.value = item.dataset.id;
              resultsDiv.classList.add('hidden');
            }
          });
          
          document.addEventListener('click', function(e) {
            if (!searchInput.contains(e.target) && !resultsDiv.contains(e.target)) {
              resultsDiv.classList.add('hidden');
            }
          });
          
          searchInput.addEventListener('focus', function() {
            if (resultsDiv.innerHTML && this.value.length >= 2) {
              resultsDiv.classList.remove('hidden');
            }
          });
        })();
        </script>
      <% else %>
        <p class="text-sm text-gray-500">No company specified</p>
      <% end %>
    </div>
  <% end %>

  <div class="flex flex-col md:flex-row gap-6 mb-8">
    <div class="flex-shrink-0">
      <% if @participant.image_url.present? %>
        <img src="<%= @participant.image_url %>" alt="<%= @participant.name %>"
             class="h-32 w-32 rounded-full object-cover border-4 border-white shadow-lg">
      <% else %>
        <div class="h-32 w-32 rounded-full bg-slate-200 flex items-center justify-center text-4xl font-bold text-slate-500">
          <%= @participant.name.split.map(&:first).join %>
        </div>
      <% end %>
    </div>

    <div class="flex-1">
      <h1 class="text-3xl font-bold text-gray-900"><%= @participant.name %></h1>
      
      <% if @participant.title.present? %>
        <p class="text-lg text-gray-600 mt-1"><%= @participant.title %></p>
      <% end %>

      <% if @participant.company_name.present? || @participant.company&.name.present? %>
        <p class="text-gray-500 mt-1">
          <% if @participant.company %>
            <%= link_to @participant.company.name, partners_search_path(search: @participant.company.name), class: "text-blue-600 hover:underline" %>
          <% else %>
            <%= @participant.company_name %>
          <% end %>
        </p>
      <% end %>

      <% if @participant.bio.present? %>
        <div class="mt-4 prose prose-sm max-w-none text-gray-700">
          <%= simple_format(@participant.bio) %>
        </div>
      <% end %>

      <div class="mt-4 flex gap-4">
        <% if @participant.linkedin_url.present? %>
          <%= link_to @participant.linkedin_url, target: "_blank", rel: "noopener",
              class: "inline-flex items-center gap-1 text-blue-600 hover:underline" do %>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          <% end %>
        <% else %>
          <% search_query = [@participant.name, @participant.company_name].compact.join(" ") %>
          <%= link_to "https://www.linkedin.com/search/results/all/?keywords=#{ERB::Util.url_encode(search_query)}", 
              target: "_blank", rel: "noopener",
              class: "inline-flex items-center gap-1 text-gray-400 hover:text-blue-600",
              title: "Search LinkedIn for #{@participant.name}" do %>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            Search LinkedIn
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <% if @news_items.any? %>
    <section class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-900">Recent News</h2>
        <%= link_to "View all", items_by_participant_path(participant: @participant.slug), class: "text-blue-600 hover:underline text-sm" %>
      </div>
      
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <% @news_items.each do |item| %>
          <%= render "news_items/card", item: item %>
        <% end %>
      </div>
    </section>
  <% end %>

  <% if @knowledge_sessions.any? %>
    <section>
      <h2 class="text-xl font-bold text-gray-900 mb-4">Conference Sessions</h2>
      
      <div class="space-y-4">
        <% @knowledge_sessions.each do |ksession| %>
          <div class="rounded-lg border bg-white p-4 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start gap-3">
              <%= link_to "/#{ksession.event_short_code}", 
                  class: "rounded bg-blue-100 px-2 py-1 text-xs font-medium text-blue-800 hover:bg-blue-200" do %>
                <%= ksession.event_name %>
              <% end %>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900"><%= ksession.title %></h3>
                <% if ksession.code.present? %>
                  <p class="text-sm text-gray-500"><%= ksession.code %></p>
                <% end %>
                <% if ksession.abstract.present? %>
                  <p class="mt-2 text-sm text-gray-600 line-clamp-2"><%= ksession.abstract %></p>
                <% end %>
                <% if ksession.recording_url.present? %>
                  <p class="mt-2">
                    <%= link_to ksession.recording_url, target: "_blank", rel: "noopener",
                        class: "inline-flex items-center gap-1 text-sm text-blue-600 hover:underline" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Watch Recording
                    <% end %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
