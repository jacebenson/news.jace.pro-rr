<% content_for :title, "Test Email - Admin" %>

<div class="max-w-2xl">
  <h1 class="text-2xl font-bold mb-6">Test Email</h1>

  <%= form_with url: admin_email_tests_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :recipient, "Recipient Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :recipient, 
          value: params[:recipient],
          required: true,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2 border" %>
    </div>

    <div>
      <%= f.label :subject, "Subject", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :subject, 
          value: params[:subject],
          required: true,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2 border" %>
    </div>

    <div>
      <%= f.label :body, "Body (Plain Text)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :body, 
          value: params[:body],
          required: true,
          rows: 10,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2 border" %>
    </div>

    <div>
      <%= f.submit "Send Test Email", 
          class: "w-full rounded-md bg-blue-600 px-4 py-2 text-white font-semibold hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-8 p-4 bg-gray-50 rounded-lg">
    <h2 class="font-semibold mb-2">Notes:</h2>
    <ul class="text-sm text-gray-600 space-y-1">
      <li>• Uses Mailgun HTTP API directly (bypasses SMTP)</li>
      <li>• Email will be sent from: news@jace.pro</li>
      <li>• Requires MAILGUN_API_KEY environment variable</li>
    </ul>
  </div>
</div>
