<% content_for :title, "#{@company.name} - Admin" %>

<div class="mb-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <% if @company.image_url.present? %>
        <img src="<%= @company.image_url %>" alt="<%= @company.name %>" class="h-16 w-16 rounded-lg object-contain bg-gray-50">
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @company.name %></h1>
        <p class="text-gray-600">
          <%= [@company.city, @company.state, @company.country].compact.join(", ") %>
        </p>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_company_path(@company), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Back", admin_companies_path, class: "text-gray-600 hover:text-gray-900 px-4 py-2" %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Info -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Details -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Details</h2>
      <dl class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <dt class="text-gray-500">Type</dt>
          <dd class="mt-1">
            <% if @company.is_partner %><span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded text-xs mr-1">Partner</span><% end %>
            <% if @company.is_customer %><span class="bg-green-100 text-green-700 px-2 py-0.5 rounded text-xs">Customer</span><% end %>
            <% unless @company.is_partner || @company.is_customer %><span class="text-gray-400">None</span><% end %>
          </dd>
        </div>
        <div>
          <dt class="text-gray-500">Status</dt>
          <dd class="mt-1">
            <span class="px-2 py-0.5 rounded text-xs <%= @company.active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-500' %>">
              <%= @company.active ? 'Active' : 'Inactive' %>
            </span>
          </dd>
        </div>
        <% if @company.website.present? %>
          <div>
            <dt class="text-gray-500">Website</dt>
            <dd class="mt-1"><%= link_to @company.website, @company.website, target: "_blank", class: "text-blue-600 hover:underline" %></dd>
          </div>
        <% end %>
        <% if @company.is_partner %>
          <% if @company.partner_level.present? %>
            <div>
              <dt class="text-gray-500">Partner Level</dt>
              <dd class="mt-1 font-medium"><%= @company.partner_level %></dd>
            </div>
          <% end %>
          <% if @company.build_level.present? %>
            <div>
              <dt class="text-gray-500">Build Level</dt>
              <dd class="mt-1"><%= @company.build_level %></dd>
            </div>
          <% end %>
          <% if @company.consulting_level.present? %>
            <div>
              <dt class="text-gray-500">Consulting Level</dt>
              <dd class="mt-1"><%= @company.consulting_level %></dd>
            </div>
          <% end %>
        <% end %>
      </dl>

      <% if @company.notes.present? %>
        <div class="mt-4 pt-4 border-t">
          <dt class="text-gray-500 text-sm">Notes</dt>
          <dd class="mt-1 text-gray-700"><%= simple_format(@company.notes) %></dd>
        </div>
      <% end %>
    </div>

    <!-- Products & Services -->
    <% products = @company.products_list %>
    <% services = @company.services_list %>
    <% if products.any? || services.any? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Products & Services</h2>
        <% if products.any? %>
          <div class="mb-4">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Products</h3>
            <div class="flex flex-wrap gap-2">
              <% products.each do |product| %>
                <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded text-xs"><%= product %></span>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if services.any? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-2">Services</h3>
            <div class="flex flex-wrap gap-2">
              <% services.each do |service| %>
                <span class="bg-teal-100 text-teal-700 px-2 py-1 rounded text-xs"><%= service %></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Participants -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">People (<%= @participants.count %>)</h2>
      <% if @participants.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <% @participants.each do |participant| %>
            <div class="flex items-center gap-3 p-3 rounded-lg border hover:bg-gray-50">
              <% if participant.image_url.present? %>
                <img src="<%= participant.image_url %>" alt="<%= participant.name %>" class="h-10 w-10 rounded-full object-cover">
              <% else %>
                <div class="h-10 w-10 rounded-full bg-slate-200 flex items-center justify-center text-slate-500 font-medium">
                  <%= participant.name.split.map(&:first).join.upcase[0,2] %>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <%= link_to participant.name, who_path(name: participant.slug), class: "font-medium text-gray-900 hover:text-blue-600 block truncate" %>
                <% if participant.title.present? %>
                  <p class="text-xs text-gray-500 truncate"><%= participant.title %></p>
                <% end %>
              </div>
              <div class="flex items-center gap-2">
                <% if participant.linkedin_url.present? %>
                  <%= link_to participant.linkedin_url, target: "_blank", class: "text-blue-600 hover:text-blue-800", title: "LinkedIn Profile" do %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                  <% end %>
                <% else %>
                  <%= link_to "https://www.linkedin.com/search/results/all/?keywords=#{ERB::Util.url_encode(participant.name + ' ' + @company.name)}", target: "_blank", class: "text-gray-400 hover:text-blue-600", title: "Search LinkedIn" do %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                  <% end %>
                <% end %>
                <%= link_to "Edit", edit_admin_participant_path(participant), class: "text-xs text-blue-600 hover:underline" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No people associated with this company yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Quick Stats -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Summary</h2>
      <dl class="space-y-3">
        <div class="flex justify-between">
          <dt class="text-gray-500">People</dt>
          <dd class="font-semibold"><%= @participants.count %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-gray-500">Created</dt>
          <dd class="text-gray-700"><%= ms_to_time(@company.created_at)&.strftime("%b %d, %Y") || "N/A" %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-gray-500">Updated</dt>
          <dd class="text-gray-700"><%= ms_to_time(@company.updated_at)&.strftime("%b %d, %Y") || "N/A" %></dd>
        </div>
      </dl>
    </div>

    <!-- Lookup Links -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Lookup</h2>
      <div class="space-y-3">
        <%= link_to "https://www.linkedin.com/search/results/companies/?keywords=#{ERB::Util.url_encode(@company.name)}", target: "_blank", rel: "noopener",
            class: "flex items-center gap-2 text-blue-600 hover:underline" do %>
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          LinkedIn
        <% end %>
        <%= link_to "https://opencorporates.com/companies?q=#{ERB::Util.url_encode(@company.name)}", target: "_blank", rel: "noopener",
            class: "flex items-center gap-2 text-blue-600 hover:underline" do %>
          <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          OpenCorporates
        <% end %>
        <%= link_to "https://www.dnb.com/site-search-results.html#BusinessDirectoryPageNumber=1&BusinessDirectorySearch=#{ERB::Util.url_encode(@company.name)}&tab=Business%20Directory", target: "_blank", rel: "noopener",
            class: "flex items-center gap-2 text-blue-600 hover:underline" do %>
          <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          D&amp;B
        <% end %>
        <%= link_to "https://www.servicenow.com/partners/partner-finder.html?q=#{ERB::Util.url_encode(@company.name)}", target: "_blank", rel: "noopener",
            class: "flex items-center gap-2 text-blue-600 hover:underline" do %>
          <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          Partner Finder
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>
      <div class="space-y-2">
        <%= link_to edit_admin_company_path(@company), class: "block w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" do %>
          Edit Company
        <% end %>
        <% if @company.is_partner %>
          <%= link_to partner_path(@company.id), class: "block w-full text-center bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200" do %>
            View Public Page
          <% end %>
        <% end %>
        <%= button_to "Delete Company", admin_company_path(@company), method: :delete,
            class: "block w-full text-center bg-red-50 text-red-600 px-4 py-2 rounded hover:bg-red-100",
            data: { turbo_confirm: "Are you sure you want to delete this company?" } %>
      </div>
    </div>
  </div>
</div>
