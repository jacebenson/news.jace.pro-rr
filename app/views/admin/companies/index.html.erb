<% content_for :title, "Companies - Admin" %>

<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Companies</h1>
    <p class="text-sm text-gray-600"><%= @companies.total_count %> total<%= " (#{@filter})" if @filter %></p>
  </div>
  <%= link_to "New Company", new_admin_company_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>

<div class="mb-4 flex flex-wrap gap-4">
  <%= form_with url: admin_companies_path, method: :get, class: "flex gap-2", local: true do %>
    <%= text_field_tag :search, @search, placeholder: "Search companies...",
        class: "rounded-md border-gray-300 shadow-sm px-3 py-2 border text-sm" %>
    <%= submit_tag "Search", class: "bg-gray-600 text-white px-4 py-2 rounded text-sm cursor-pointer hover:bg-gray-700" %>
  <% end %>
  
  <div class="flex gap-2">
    <%= link_to "All", admin_companies_path, class: "px-3 py-2 rounded text-sm #{params[:is_partner].blank? && params[:is_customer].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}" %>
    <%= link_to "Partners", admin_companies_path(is_partner: true), class: "px-3 py-2 rounded text-sm #{params[:is_partner] ? 'bg-blue-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}" %>
    <%= link_to "Customers", admin_companies_path(is_customer: true), class: "px-3 py-2 rounded text-sm #{params[:is_customer] ? 'bg-blue-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}" %>
  </div>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">People</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @companies.each do |company| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center gap-2">
              <% if company.image_url.present? %>
                <img src="<%= company.image_url %>" class="h-8 w-8 rounded object-contain bg-gray-50">
              <% end %>
              <%= link_to company.name, admin_company_path(company), class: "text-sm font-medium text-gray-900 hover:text-blue-600" %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= [company.city, company.state, company.country].compact.join(", ") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <% if company.is_partner %><span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded text-xs">Partner</span><% end %>
            <% if company.is_customer %><span class="bg-green-100 text-green-700 px-2 py-0.5 rounded text-xs">Customer</span><% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% count = company.respond_to?(:participants_count) ? company.participants_count : company.participants.count %>
            <% if count > 0 %>
              <%= link_to "#{count} people", admin_company_path(company), class: "text-blue-600 hover:underline" %>
            <% else %>
              <span class="text-gray-400">0</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 py-0.5 rounded text-xs <%= company.active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-500' %>">
              <%= company.active ? 'Active' : 'Inactive' %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <%= link_to "View", admin_company_path(company), class: "text-blue-600 hover:text-blue-900 mr-3" %>
            <%= link_to "Edit", edit_admin_company_path(company), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= paginate @companies %>
</div>
