<%= form_with model: [:admin, news_feed], class: "bg-white rounded-lg shadow p-6 max-w-2xl" do |f| %>
  <% if news_feed.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <ul class="list-disc list-inside text-red-600 text-sm">
        <% news_feed.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :url, "URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :fetch_url, "Fetch URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :fetch_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      <p class="mt-1 text-xs text-gray-500">URL to fetch the RSS/JSON feed from (if different from display URL)</p>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :feed_type, "Feed Type", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :feed_type, options_for_select([["RSS", "rss"], ["JSON", "json"], ["API", "api"], ["Scrape", "scrape"]], news_feed.feed_type),
            {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :default_author, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :default_author, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :image_url, "Image URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :image_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :notes, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="flex gap-6">
      <label class="flex items-center gap-2">
        <%= f.check_box :active, class: "rounded border-gray-300 text-blue-600" %>
        <span class="text-sm text-gray-700">Active</span>
      </label>
    </div>

    <div class="flex gap-4 pt-4">
      <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", admin_news_feeds_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
<% end %>
