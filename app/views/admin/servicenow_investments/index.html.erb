<% content_for :title, "Investments - Admin" %>

<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">ServiceNow Investments</h1>
    <p class="text-sm text-gray-600"><%= @investments.total_count %> total</p>
  </div>
  <%= link_to "New Investment", new_admin_investment_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-center sm:text-left" %>
</div>

<div class="mb-4">
  <%= form_with url: admin_investments_path, method: :get, class: "flex gap-2", local: true do %>
    <%= text_field_tag :search, @search, placeholder: "Search companies...",
        class: "flex-1 sm:flex-none sm:w-64 rounded-md border-gray-300 shadow-sm px-3 py-2 border text-sm" %>
    <%= submit_tag "Search", class: "bg-gray-600 text-white px-4 py-2 rounded text-sm cursor-pointer hover:bg-gray-700" %>
  <% end %>
</div>

<!-- Mobile card view -->
<div class="sm:hidden space-y-4">
  <% @investments.each do |investment| %>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <h3 class="font-medium text-gray-900"><%= investment.company_name %></h3>
          <span class="inline-block mt-1 px-2 py-0.5 text-xs rounded bg-gray-100 text-gray-600"><%= investment.investment_type %></span>
        </div>
        <%= link_to "Edit", edit_admin_investment_path(investment), class: "text-blue-600 hover:text-blue-900 text-sm" %>
      </div>
      <div class="mt-3 text-sm text-gray-500 space-y-1">
        <% if investment.amount.present? %>
          <p><strong>Amount:</strong> <%= number_to_currency(investment.amount, precision: 0) %> <%= investment.currency %></p>
        <% end %>
        <% if investment.date.present? %>
          <p><strong>Date:</strong> <%= investment.date.is_a?(Date) ? investment.date.strftime("%b %d, %Y") : investment.date %></p>
        <% end %>
        <% if investment.url.present? %>
          <p>
            <%= link_to investment.url, target: "_blank", rel: "noopener", 
                class: "text-blue-600 hover:text-blue-800 break-all" do %>
              <span class="inline-flex items-center gap-1">
                Source
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </span>
            <% end %>
          </p>
        <% end %>
        <% if investment.summary.present? %>
          <details class="mt-2">
            <summary class="cursor-pointer text-blue-600 hover:text-blue-800 font-medium">View AI Summary</summary>
            <div class="mt-2 p-3 bg-gray-50 rounded text-sm text-gray-700">
              <%= simple_format(investment.summary) %>
            </div>
          </details>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Desktop table view -->
<div class="hidden sm:block bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Company</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Source</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @investments.each do |investment| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
            <%= investment.company_name %>
            <% if investment.summary.present? %>
              <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                AI
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= investment.investment_type %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% if investment.amount.present? %>
              <%= number_to_currency(investment.amount, precision: 0) %> <%= investment.currency %>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <% if investment.date.present? %>
              <%= investment.date.is_a?(Date) ? investment.date.strftime("%b %d, %Y") : investment.date %>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <% if investment.url.present? %>
              <%= link_to investment.url, target: "_blank", rel: "noopener", 
                  class: "text-blue-600 hover:text-blue-800 inline-flex items-center gap-1" do %>
                Link
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              <% end %>
            <% else %>
              <span class="text-gray-400">â€”</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <%= link_to "Edit", edit_admin_investment_path(investment), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
        <% if investment.summary.present? %>
          <tr class="bg-gray-50">
            <td colspan="6" class="px-6 py-0">
              <details class="group">
                <summary class="cursor-pointer py-3 text-sm font-medium text-blue-600 hover:text-blue-800 flex items-center gap-2">
                  <svg class="w-4 h-4 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                  View AI Summary
                </summary>
                <div class="pb-4 pl-6">
                  <div class="prose prose-sm max-w-none text-gray-700 bg-white p-4 rounded border border-gray-200">
                    <%= simple_format(investment.summary) %>
                  </div>
                </div>
              </details>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= paginate @investments %>
</div>
