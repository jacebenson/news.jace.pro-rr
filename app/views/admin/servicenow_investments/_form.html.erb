<%= form_with model: [:admin, investment], url: investment.persisted? ? admin_investment_path(investment) : admin_investments_path, class: "bg-white rounded-lg shadow p-6 max-w-2xl" do |f| %>
  <% if investment.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <ul class="list-disc list-inside text-red-600 text-sm">
        <% investment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :company_name, "Company", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :company_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :investment_type, "Type", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :investment_type, options_for_select([["Acquisition", "acquisition"], ["Investment", "investment"], ["Partnership", "partnership"]], investment.investment_type),
          { include_blank: "Select type" },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-3 gap-4">
      <div>
        <%= f.label :amount, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :amount, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :currency, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :currency, placeholder: "USD", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :date, class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :summary, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :summary, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :content, "Full Content", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :content, rows: 6, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :url, "Source URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="flex gap-4 pt-4">
      <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", admin_investments_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
<% end %>
