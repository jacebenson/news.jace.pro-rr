<%= form_with model: [:admin, app], url: app.persisted? ? admin_store_app_path(app) : admin_store_apps_path, class: "bg-white rounded-lg shadow p-6 max-w-2xl" do |f| %>
  <% if app.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <ul class="list-disc list-inside text-red-600 text-sm">
        <% app.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :tagline, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :tagline, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :company_name, "Company", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :company_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :store_description, "Description", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :store_description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :app_type, "App Type", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :app_type, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :logo, "Logo URL", class: "block text-sm font-medium text-gray-700" %>
        <%= f.url_field :logo, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :landing_page, "Landing Page URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :landing_page, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :source_app_id, "Source App ID", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :source_app_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :listing_id, "Listing ID", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :listing_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :purchase_count, "Purchase Count", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :purchase_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :review_count, "Review Count", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :review_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :display_price, "Display Price", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :display_price, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="flex gap-4 pt-4">
      <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", admin_store_apps_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
<% end %>
