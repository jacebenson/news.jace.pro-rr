<%= form_with model: [:admin, news_item], class: "bg-white rounded-lg shadow p-6 max-w-2xl" do |f| %>
  <% if news_item.errors.any? %>
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded">
      <ul class="list-disc list-inside text-red-600 text-sm">
        <% news_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :url, "URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :body, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :body, rows: 6, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :news_feed_id, "News Feed", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :news_feed_id, NewsFeed.order(:title), :id, :title,
            { include_blank: "Select a feed" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :item_type, "Type", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :item_type, options_for_select([["Article", "article"], ["Video", "video"], ["Podcast", "podcast"], ["Event", "event"]], news_item.item_type),
            {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :image_url, "Image URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :image_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="flex gap-6">
      <label class="flex items-center gap-2">
        <%= f.check_box :active, class: "rounded border-gray-300 text-blue-600" %>
        <span class="text-sm text-gray-700">Active</span>
      </label>
    </div>

    <div class="flex gap-4 pt-4">
      <%= f.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", admin_news_items_path, class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
<% end %>
