<% content_for :title, "Background Jobs - Admin" %>

<h1 class="text-2xl font-bold text-gray-900 mb-6">Background Jobs</h1>

<%# Job Triggers with Next Run Times %>
<div class="bg-white rounded-lg shadow p-6 mb-8">
  <h2 class="font-semibold text-gray-900 mb-4">Run Jobs Manually</h2>
  
  <div class="space-y-6">
    <%# News & Content %>
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-3">News & Content</h3>
      <div class="space-y-2">
        <%= render "job_row", 
            job_key: "fetch_news_items",
            job_class: "FetchNewsItemsJob",
            label: "Fetch News Items",
            description: "Fetches all active RSS feeds",
            color: "blue",
            next_run: @next_runs["FetchNewsItemsJob"] %>
        
        <%= render "job_row",
            job_key: "fetch_apps",
            job_class: "FetchAppsJob", 
            label: "Fetch Store Apps",
            description: "Fetches ServiceNow Store apps (~1 hour)",
            color: "green",
            next_run: @next_runs["FetchAppsJob"] %>
        
        <%= render "job_row",
            job_key: "enrich_items",
            job_class: "EnrichItemJob",
            label: "Enrich Items",
            description: "AI enrichment and image uploads",
            color: "purple",
            next_run: @next_runs["EnrichItemJob"] %>
      </div>
    </div>

    <%# Partners & Companies %>
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-3">Partners & Companies</h3>
      <div class="space-y-2">
        <%= render "job_row",
            job_key: "fetch_partners",
            job_class: "FetchPartnersJob",
            label: "Fetch Partners",
            description: "ServiceNow Partner Portal API",
            color: "indigo",
            next_run: @next_runs["FetchPartnersJob"] %>
        
        <%= render "job_row",
            job_key: "enrich_partners",
            job_class: "EnrichPartnersJob",
            label: "Enrich Partners",
            description: "Discover logos, RSS feeds, content",
            color: "teal",
            next_run: @next_runs["EnrichPartnersJob"] %>
      </div>
    </div>

    <%# Participants %>
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-3">Participants</h3>
      <div class="space-y-2">
        <%= render "job_row",
            job_key: "link_participants",
            job_class: "LinkParticipantsJob",
            label: "Link Participants",
            description: "Links participants to companies by name",
            color: "orange",
            next_run: @next_runs["LinkParticipantsJob"] %>
      </div>
    </div>

    <%# SEC Filings %>
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-3">SEC Filings</h3>
      <div class="space-y-2">
        <%= render "job_row",
            job_key: "fetch_sec_filings",
            job_class: "FetchSecFilingsJob",
            label: "Fetch SEC Filings",
            description: "10-K, 10-Q, 8-K filings with AI summary",
            color: "red",
            next_run: @next_runs["FetchSecFilingsJob"] %>
      </div>
    </div>

    <%# System %>
    <div>
      <h3 class="text-sm font-medium text-gray-500 mb-3">System</h3>
      <div class="space-y-2">
        <%= render "job_row",
            job_key: "backup",
            job_class: "BackupJob",
            label: "Backup Database",
            description: "SQLite backup to S3",
            color: "gray",
            next_run: @next_runs["BackupJob"] %>
      </div>
    </div>
  </div>
</div>

<%# Stats %>
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
  <div class="bg-white rounded-lg shadow p-4">
    <h3 class="text-sm font-medium text-gray-500">Pending Jobs</h3>
    <p class="text-2xl font-bold text-gray-900"><%= @pending_jobs %></p>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <h3 class="text-sm font-medium text-gray-500">Scheduled Jobs</h3>
    <p class="text-2xl font-bold text-gray-900"><%= @scheduled_jobs %></p>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <h3 class="text-sm font-medium text-gray-500">Failed Jobs</h3>
    <p class="text-2xl font-bold <%= @failed_jobs > 0 ? 'text-red-600' : 'text-gray-900' %>"><%= @failed_jobs %></p>
    <% if @failed_jobs > 0 %>
      <div class="mt-2 flex gap-2">
        <%= button_to "Retry All", admin_retry_failed_path, method: :post, 
            class: "text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded hover:bg-yellow-200",
            data: { turbo_confirm: "Retry all #{@failed_jobs} failed jobs?" } %>
        <%= button_to "Clear All", admin_clear_failed_path, method: :post,
            class: "text-xs bg-red-100 text-red-800 px-2 py-1 rounded hover:bg-red-200",
            data: { turbo_confirm: "Delete all #{@failed_jobs} failed jobs?" } %>
      </div>
    <% end %>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <h3 class="text-sm font-medium text-gray-500">Items Pending Enrichment</h3>
    <p class="text-2xl font-bold text-gray-900"><%= @items_pending_enrichment %></p>
  </div>
</div>

<%# Feed Status %>
<div class="bg-white rounded-lg shadow overflow-hidden mb-8">
  <div class="px-4 py-3 border-b">
    <h2 class="font-semibold text-gray-900">Feed Status</h2>
  </div>
  <div class="p-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
      <div>
        <span class="text-gray-500">Active Feeds:</span>
        <span class="font-medium"><%= @active_feeds %></span>
      </div>
      <div>
        <span class="text-gray-500">Feeds with Errors:</span>
        <% if @feeds_with_errors > 0 %>
          <%= link_to admin_news_feeds_path(filter: "errors"), class: "font-medium text-red-600 hover:underline" do %>
            <%= @feeds_with_errors %>
          <% end %>
        <% else %>
          <span class="font-medium">0</span>
        <% end %>
      </div>
      <div>
        <span class="text-gray-500">Recently Fetched (30min):</span>
        <span class="font-medium"><%= @recently_fetched %></span>
      </div>
      <div>
        <span class="text-gray-500">Never Fetched:</span>
        <span class="font-medium"><%= @never_fetched %></span>
      </div>
    </div>
  </div>
</div>

<%# Partner Status %>
<div class="bg-white rounded-lg shadow overflow-hidden mb-8">
  <div class="px-4 py-3 border-b">
    <h2 class="font-semibold text-gray-900">Partner & Participant Status</h2>
  </div>
  <div class="p-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
      <div>
        <span class="text-gray-500">Total Partners:</span>
        <span class="font-medium"><%= @total_partners %></span>
      </div>
      <div>
        <span class="text-gray-500">With ServiceNow Content:</span>
        <span class="font-medium"><%= @partners_with_servicenow_content %></span>
      </div>
      <div>
        <span class="text-gray-500">With RSS Feed:</span>
        <span class="font-medium"><%= @partners_with_rss %></span>
      </div>
      <div>
        <span class="text-gray-500">Participants Needing Link:</span>
        <% if @participants_without_company > 0 %>
          <%= link_to admin_participants_path(filter: "unlinked"), class: "font-medium text-yellow-600 hover:underline" do %>
            <%= @participants_without_company %>
          <% end %>
        <% else %>
          <span class="font-medium">0</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%# Recent Jobs %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-4 py-3 border-b">
    <h2 class="font-semibold text-gray-900">Recent Jobs</h2>
  </div>
  <% if @recent_jobs.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Job</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Queue</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Scheduled</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recent_jobs.each do |job| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= job.class_name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= job.queue_name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <% if job.finished_at %>
                <span class="px-2 py-1 text-xs rounded bg-green-100 text-green-800">Completed</span>
              <% elsif SolidQueue::FailedExecution.exists?(job_id: job.id) %>
                <span class="px-2 py-1 text-xs rounded bg-red-100 text-red-800">Failed</span>
              <% elsif job.scheduled_at && job.scheduled_at > Time.current %>
                <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-800">Scheduled</span>
              <% else %>
                <span class="px-2 py-1 text-xs rounded bg-yellow-100 text-yellow-800">Pending</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <% if job.scheduled_at && job.scheduled_at > Time.current %>
                in <%= time_ago_in_words(job.scheduled_at) %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= time_ago_in_words(job.created_at) %> ago</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="p-4 text-gray-500">No recent jobs</p>
  <% end %>
</div>
