<% content_for :title, "Customers - News Jace Pro" %>

<div class="mt-4">
  <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">ServiceNow Customers</h1>
      <p class="text-gray-600"><%= @customers.total_count %> customers</p>
    </div>

    <%= form_with url: customers_path, method: :get, class: "flex gap-2", local: true do |f| %>
      <%= text_field_tag :search, @search, placeholder: "Search customers...",
          class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2 border text-sm" %>
      <%= f.submit "Search", class: "rounded-md bg-blue-600 px-4 py-2 text-white text-sm hover:bg-blue-700 cursor-pointer" %>
    <% end %>
  </div>

  <% if @search.present? %>
    <div class="mb-4">
      <p class="text-sm text-gray-600">
        Showing results for "<%= @search %>"
        <%= link_to "Clear", customers_path, class: "text-blue-600 hover:underline ml-2" %>
      </p>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @customers.each do |customer| %>
      <div class="rounded-lg border bg-white p-4 shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-start gap-3">
          <% if customer.image_url.present? %>
            <img src="<%= customer.image_url %>" alt="<%= customer.name %>"
                 class="h-12 w-12 rounded object-contain bg-gray-50"
                 onerror="this.style.display='none'">
          <% else %>
            <div class="h-12 w-12 rounded bg-slate-100 flex items-center justify-center text-lg font-bold text-slate-400">
              <%= customer.name.first %>
            </div>
          <% end %>

          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-gray-900 truncate"><%= customer.name %></h3>
            
            <% if customer.city.present? || customer.country.present? %>
              <p class="text-xs text-gray-500 truncate">
                <%= [customer.city, customer.state, customer.country].compact.join(", ") %>
              </p>
            <% end %>
          </div>
        </div>

        <div class="mt-3 flex gap-2">
          <% if customer.website.present? %>
            <%= link_to customer.website, target: "_blank", rel: "noopener",
                class: "text-xs text-blue-600 hover:underline truncate" do %>
              Website
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @customers.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No customers found</p>
    </div>
  <% end %>

  <div class="mt-6">
    <%= paginate @customers %>
  </div>
</div>
